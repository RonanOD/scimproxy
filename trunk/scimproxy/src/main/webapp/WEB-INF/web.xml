<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>

  <display-name>scimproxy</display-name>
  <servlet>
    <servlet-name>User</servlet-name>
    <servlet-class>info.simplecloud.scimproxy.ScimUserServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>User</servlet-name>
	<url-pattern>/User/*</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>Users</servlet-name>
    <servlet-class>info.simplecloud.scimproxy.ScimUsersServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Users</servlet-name>
	<url-pattern>/Users</url-pattern>
  </servlet-mapping>

	<servlet>
		<servlet-name>Group</servlet-name>
		<servlet-class>info.simplecloud.scimproxy.ScimGroupServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Group</servlet-name>
		<url-pattern>/Group</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>Groups</servlet-name>
		<servlet-class>info.simplecloud.scimproxy.ScimGroupsServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Groups</servlet-name>
		<url-pattern>/Groups</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>Schema</servlet-name>
		<servlet-class>info.simplecloud.scimproxy.ScimSchemaServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Schema</servlet-name>
		<url-pattern>/Schema</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>Schemas</servlet-name>
		<servlet-class>info.simplecloud.scimproxy.ScimSchemasServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Schemas</servlet-name>
		<url-pattern>/Schemas</url-pattern>
	</servlet-mapping>

	<filter>
		<filter-name>MethodOverrideFilter</filter-name>
		<filter-class>info.simplecloud.scimproxy.filter.MethodOverrideFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>MethodOverrideFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>  

	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
	
	
</web-app>
