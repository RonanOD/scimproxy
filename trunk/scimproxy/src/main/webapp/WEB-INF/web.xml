<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>

  <display-name>scimproxy</display-name>
  <servlet>
    <servlet-name>User</servlet-name>
    <servlet-class>info.simplecloud.scimproxy.ScimUserServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>User</servlet-name>
	<url-pattern>/v1/User/*</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>Users</servlet-name>
    <servlet-class>info.simplecloud.scimproxy.ScimUsersServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Users</servlet-name>
	<url-pattern>/v1/Users</url-pattern>
  </servlet-mapping>

	<servlet>
		<servlet-name>Group</servlet-name>
		<servlet-class>info.simplecloud.scimproxy.ScimGroupServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Group</servlet-name>
		<url-pattern>/v1/Group/*</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>Groups</servlet-name>
		<servlet-class>info.simplecloud.scimproxy.ScimGroupsServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Groups</servlet-name>
		<url-pattern>/v1/Groups</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>Schema</servlet-name>
		<servlet-class>info.simplecloud.scimproxy.ScimSchemaServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Schema</servlet-name>
		<url-pattern>/v1/Schema</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>Schemas</servlet-name>
		<servlet-class>info.simplecloud.scimproxy.ScimSchemasServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Schemas</servlet-name>
		<url-pattern>/v1/Schemas</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>Batch</servlet-name>
		<servlet-class>info.simplecloud.scimproxy.ScimBatchServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Batch</servlet-name>
		<url-pattern>/v1/Batch/User</url-pattern>
	</servlet-mapping>


	<servlet>
		<servlet-name>List</servlet-name>
		<servlet-class>info.simplecloud.scimproxy.viewer.List</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>List</servlet-name>
		<url-pattern>/Viewer/List</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>Add</servlet-name>
		<servlet-class>info.simplecloud.scimproxy.viewer.Add</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Add</servlet-name>
		<url-pattern>/Viewer/Add</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>Edit</servlet-name>
		<servlet-class>info.simplecloud.scimproxy.viewer.Edit</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Edit</servlet-name>
		<url-pattern>/Viewer/Edit</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>ViewerBatch</servlet-name>
		<servlet-class>info.simplecloud.scimproxy.viewer.Batch</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ViewerBatch</servlet-name>
		<url-pattern>/Viewer/Batch</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>AddUser</servlet-name>
		<servlet-class>info.simplecloud.scimproxy.viewer.AddUser</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>AddUser</servlet-name>
		<url-pattern>/AddUser</url-pattern>
	</servlet-mapping> 

	<filter>
		<filter-name>MethodOverrideFilter</filter-name>
		<filter-class>info.simplecloud.scimproxy.filter.MethodOverrideFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>MethodOverrideFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	
 

	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
	
	
</web-app>
